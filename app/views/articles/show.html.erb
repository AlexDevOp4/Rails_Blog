<div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/" aria-current="page" href="#">Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/articles/new">New Articles</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container show-article-container">
        <h1 class="article-show-title">
            <%= @article.title %>


        </h1>
        <div class="show-container">
            <h2 class="card-title">
                <%= @article.title %>
            </h2>
            <p class="card-text">
                <%= @article.body %>
            </p>
            <%= link_to "Edit" , edit_article_path(@article) %>
                <button type="button" class="btn btn-outline-danger delete-button">
                    <%= link_to "Delete" , article_path(@article), data: { turbo_method: :delete,
                        turbo_confirm: "Are you sure?" } %>
                </button>
        </div>
    </div>


</div>
</div>