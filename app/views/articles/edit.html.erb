<div class="container">
	<h1>Edit Article!</h1>
	<%= form_with model: @article do |form| %>

	<div class="container">
		<form>
			<div class="row mb-3">
				<label for="exampleFormControlInput1" class="form-label">Title</label>
				<%= form.text_field :title %>
			</div>
			<div class="row mb-3">
				<label for="exampleFormControlTextarea1" class="form-label">Body</label>
				<%= form.text_area :body%>
			</div>
			<%= form.submit %>
		</form>
	</div>

	<% end %>
	<a href="/" type="button" class="btn btn-outline-danger"> Cancel Edit </a>
</div>
